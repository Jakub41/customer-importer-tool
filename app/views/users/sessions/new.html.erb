<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div>
    <%= link_to 'See Customers', customers_path %>
    </div>
    <div>
    <%= link_to 'Import Customers', upload_companies_path %>
    </div>
    <div class="card">
      <div class="card-body">
        <%#= link_to "Sign up", new_registration_path(resource_name), class: 'float-right btn btn-outline-primary' %>

        <h4 class="card-title mb-4 mt-1">Sign in</h4>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
            input_html: {autofocus: true, autocomplete: "email"} %>

          <%= f.input :password,
            input_html: {autocomplete: "off"} do %>
            <%= link_to "Forgot?", new_password_path(resource_name), class: 'float-right' %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% end %>

          <%= f.input :remember_me, as: :boolean %>
          <%= f.submit 'Log In', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
