<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= link_to "Sign in", new_session_path(resource_name), class: 'float-right btn btn-outline-primary' %>

        <h4 class="card-title mb-4 mt-1">Sign up</h4>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.input :email,
            input_html: {autocomplete: "email"} %>
          <%= f.input :password,
            input_html: {autocomplete: "off"},
            hint: f.object.errors[:password].present? ? '' : "#{@minimum_password_length} characters minimum" %>
          
          <%= f.submit 'Register', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
