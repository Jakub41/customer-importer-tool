<div class="card mb-3">
  <div class="card-header">Customers</div>
  <div class="card-body">
    <%= link_to 'Import Customers', new_company_customer_import_path, class: 'btn btn-primary' %>
    <%= link_to 'Delete All', delete_all_company_customers_path, method: :delete, class: 'btn btn-secondary' %>

    <% if @customers.length > 0 %>
      <table class="table">
        <thead>
          <th>Customer Name</th>
          <th>Address</th>
          <th>Zip Code</th>
          <th>City</th>
          <th>Country Name</th>
          <th>Country Code</th>
          <th>User Email</th>
        </thead>
        <tbody>
          <%= render @customers %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
